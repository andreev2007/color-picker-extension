{
    "name": "Color picker",
    "description": "Color picker extension for chrome",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/color-picker.png",
        "32": "/images/color-picker.png",
        "48": "/images/color-picker.png"
    }

}